#!/usr/bin/env node

const path = require('path');
const cypress = require('cypress');
const cypressConfig = require('../cypress.json');

if (process.env.CYPRESS_BASE_URL) {
    cypressConfig.baseUrl = process.env.CYPRESS_BASE_URL;
}

// Remap directories
cypressConfig.supportFile = path.resolve(__dirname, '../' + cypressConfig.supportFile)
cypressConfig.pluginsFile = path.resolve(__dirname, '../' + cypressConfig.pluginsFile)
cypressConfig.fixturesFolder = path.resolve(__dirname, '../' + cypressConfig.fixturesFolder)
cypressConfig.integrationFolder = path.resolve(__dirname, '../' + cypressConfig.integrationFolder)

cypress.run({config: cypressConfig});
